/* page-err */
.page-err {
	width: 100vw;
	height: 100vh;
}
.page-err-icon {
	width: 320rpx;
}
.page-err-text {
	margin-top: 30rpx;
}

/* data-empty */
.data-empty {
	margin-top: 200rpx;
	text-align: center;
}
.data-empty-icon {
	width: 320rpx;
}
.data-empyt-text {
	margin-top: 30rpx;
	color: #999;
}

.media {
	display: flex;
	justify-content:flex-start;
	align-items:center;
	margin: 20rpx 0;
}
.media-img {
	width:320rpx;
	height:180rpx;
}
.media-body {
	max-width:350rpx;
	padding:0 0 0 20rpx;
}
.media-heading, .media-price {
	padding: 10rpx 0;
}

/* waterfall */
.waterfall {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	flex-wrap: wrap;
	padding: 0 24rpx;
}
.waterfall-item {
	height: auto;
	background-color: #101010;
	border-radius: 8rpx;
	overflow: hidden;
	margin: 18rpx 0;
	box-shadow: 0 0 12rpx rgba(255, 255, 255, .2);
}
.waterfall-item-img {
	width: 100%;
}
.waterfall-item-caption {
	padding: 16rpx;
}
.waterfall-item-content{
	margin: 8rpx 0 0 0;
	font-size: 12px;
	line-height: 17px;
	color: #F15348;
}

/* graph */
.graph {
	position: relative;
	border-radius: 8rpx;
	overflow: hidden;
}
.graph-heading {
	padding: 0 0 20rpx 0;
	font-size: 14px;
	font-weight: 500;
	text-align: center;
}
.graph-img {
	width: 100%;
	height: 434rpx;
}
.graph-preview {
	position: absolute;
	bottom: 0;
	right: 0;
	padding: 10rpx 20rpx;
	background-color: rgba(0, 0, 0, .6);
	color: #fff;
	font-size: 14px;
}
.graph-preview-text, .payreceipt .copy-text {
	padding: 0 0 0 8rpx;
	vertical-align: middle;
}

/* payreceipt */
.payreceipt {
	padding: 0 24rpx;
}
.payreceipt-info {
	margin: 0 0 88rpx 0;
}
.payreceipt-info-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.payreceipt-info-heading {
	font-size: 16px;
	font-weight: 500;
	line-height: 23px;
}
.payreceipt-info-copy {
	font-size: 14px;
	line-height: 20px;
	color: #2596FF
}
.payreceipt-info-item {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	margin: 28rpx 0;
	font-size: 14px;
	color: #666;
	line-height: 20px;
}
.payreceipt-info-item .item-label {
	width: 70px;
	flex-shrink: 0;
}
.payreceipt-graph-heading {
	margin: 0 0 16rpx 0;
	font-size: 14px;
	line-height: 20px;
	color: #999;
}
.payreceipt .graph-img {
	box-sizing: border-box;
	padding: 16rpx;
	border: 4rpx dashed #ddd;
}
.payreceipt .graph-preview {
	bottom: 16rpx;
	right: 16rpx;
}