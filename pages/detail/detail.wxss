/* pages/detail/detail.wxss */
@import '../../style/common.wxss';

.summary-video video {
	width: 100vw;
	height: 422rpx;
}
.summary-caption {
	padding: 32rpx 26rpx;
	font-size: 20px;
	line-height: 28px;
}
.regard-content {
	color: #ccc;
}
.detail-tip {
	padding: 0 26rpx 26rpx 26rpx;
}
.detail-tip .flow-img {
	width: 100%;
	height: 124rpx;
}
.detail .flow-header {
	padding:48rpx 0 24rpx 0;
}
.detail .script-header {
	padding: 36rpx 0 24rpx 0;
}
 .detail .regard-header {
	 padding: 48rpx 0 16rpx 0;
 }
.detail-tip .regard-item {
	padding: 16rpx 0;
}
.detail-script {
	padding: 0 26rpx 26rpx 26rpx;
}
.detail-tip .script-img {
	width: 100vw;
}
.detail-sample {
	padding: 26rpx 0 0 0;
}
.detail-sample .sample-header {
	padding: 6rpx 26rpx;
}
.detail-sample .view-more {
	width: 702rpx;
	height: 48px;
	margin: 30rpx auto 0;
	line-height: 48px;
	border-radius: 4px;
	background-color: #353535;
	text-align: center;
	color: #fff;
}
.detail-sample .sample-empty {
	padding: 64rpx 48rpx 0 48rpx;
	color: #999;
	text-align: center;
}
.detail-sample .sample-empty-link {
	color: #4CA8FD;
}

.toolbar {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.toolbar-item {
	height: 100rpx;
}
.toolbar .fav {
	width: 150rpx;
	text-align: center;
}
.toolbar .fav-icon {
	width: 22px;
}
.toolbar .fav-text {
	font-size: 10px;
	line-height: 14px;
}
.toolbar .place-order {
	width: 600rpx;
	padding: 0;
	background: linear-gradient(90deg,rgba(249,141,119,1) 0%,rgba(240,84,66,1) 100%);
	color: #fff;
	text-align: center;
	line-height: 100rpx;
}

image {
	width: 100%;
}