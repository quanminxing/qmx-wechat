/* pages/orders/orders.wxss */
@import '../../template/template';

.page {
	background-color: #eee;
}
.orders-nav {
	position: fixed;
	top: 0;
	left: 0;
	width: 100vw;
	height: 44px;
	padding: 0 0 0 24rpx;
	background-color: #fff;
	color: #666;
}
.orders-nav-item {
	line-height: 41px;
	text-align: center;
}
.orders-nav-selected {
	border-bottom: 3px solid #F4756D;
	color: #F4756D;
}

.orders-content {
	margin-top: calc(44px + 24rpx);
	padding: 0 24rpx;
}
.orders-item {
	margin: 24rpx 0;
	background-color: #fff;
	border-radius: 6px;
	overflow: hidden;
}
.orders-item-header {
	padding: 18rpx 24rpx;
	border-bottom: 2rpx solid #eee;
	font-size: 24rpx;
}
.orders-item-content {
	padding: 16rpx 24rpx;
	border-bottom: 2rpx solid #eee;
	align-items: flex-start;
}
.orders-item-media {
	flex-grow: 1;
	align-items: flex-start;
	margin: 0;
}
.orders-item-img {
	flex-shrink: 0;
	width: 140rpx;
	height: 140rpx;
}
.orders-item-media-body {
	flex-grow: 1;
	padding:0 0 0 20rpx;
}
.orders-item-info {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	color: #999;
}
.orders-item-info .info-left, .orders-item-info .info-right {
	flex-grow: 1;
}
.orders-item-status {
	flex-shrink: 0;
	padding: 0 0 0 30rpx;
	color: #f15348;
}
.orders-content .order-successful {
	font-size: 14px;
	color: #1AAD19;	
}
.orders-item-footer {
	padding: 0 24rpx;
}
.orders-item-footer .sending-btn {
	display: inline-block;
	color: #f15348;
}
.orders-item-footer .sending {
	text-align: right;
}
.orders-item-footer .paying-btn {
	background-color: #f15348;
	color: #fff;
}
.orders-item-footer .order-btn {
	margin: 14rpx 0;
	padding: 10rpx 40rpx;
	border: 2rpx solid #f15348;
	border-radius: 30rpx;
}
.orders-item-footer .paying-price {
	color: #f15348;
	font-size: 14px;
	font-weight: 500;
}