/**index.wxss**/
.arrow-right {
	flex-shrink: 0;
	width: 32rpx;
}
.page-padding {
	padding: 0 24rpx;
}

.userinfo {
	margin: 64rpx 0 86rpx 0;
}
.userinfo .media {
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.userinfo .media-img {
	width: 126rpx;
	height: 126rpx;
	margin: 0 20rpx;
	border-radius: 50%;
	overflow: hidden;
}
.userinfo .media-heading {
	margin: 0 0 20rpx 0;
	font-size: 20px;
	font-weight: 500;
	line-height: 28px;
}

.order-content {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 46rpx 0;
}
.order-item {
	text-align: center;
}
.order-all-label {
	vertical-align: middle;
}
.order-item .pos-rel {
	display: inline-block;
}
.order-content .thumb-img {
	width: 56rpx;
}
.order-content .thumb-text {
	padding: 16rpx 0 0 0;
	color: #ddd;
}
.order-content .order-flag {
	position: absolute;
	top: -9px;
	right: -9px;
	width: 18px;
	height: 18px;
	line-height: 18px;
	background-color: #F15348;
	border-radius: 50%;
	color: #ddd;
}
.account {
	padding: 0 24rpx 28rpx 24rpx;
	margin: 0 0 28rpx 0;
	border-bottom: 20rpx solid #1b1b1b;
}
.account-item, .service-item {
	padding: 10rpx 0;
}
.service-item button {
	padding: 0;
	background-color: transparent;
	border-radius: 0;
	color: #fff;
}